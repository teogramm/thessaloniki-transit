<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hourNumber"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" tools:text="05"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textAppearance="@style/OnboardingTitle"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintStart_toEndOf="@+id/hourNumber"
            app:layout_constraintTop_toTopOf="@+id/hourNumber"
            app:layout_constraintBottom_toBottomOf="@+id/hourNumber" android:layout_marginStart="16dp"
            android:id="@+id/departureTimesRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/recyclerview_schedule_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>