<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hourNumber"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" tools:text="05"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/OnboardingTitle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/departureTimesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:listitem="@layout/recyclerview_schedule_time" />
</LinearLayout>